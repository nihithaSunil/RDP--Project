<div class="card">
  <div class="card-content">
    <h5>Order History</h5>

    <% if @customer.orders.any? %>
      <table class="striped">
        <thead>
          <tr>
            <th>Date</th>
            <th>Amount</th>
          </tr>
        </thead>
        <tbody>
          <% @customer.orders.order(date: :desc).each do |order| %>
            <tr>
              <td>
                <%= link_to order.date.strftime("%m/%d/%y"), order_path(order),
                    style: "color: #2196F3; text-decoration: none;" %>
              </td>
              <td>
                <%= number_to_currency(order.grand_total) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p style="margin-top: 1rem;">You havenâ€™t placed any orders yet.</p>
    <% end %>
  </div>
</div>
