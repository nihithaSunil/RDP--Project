<div class="card">
  <div class="card-content">
    <h5>Order History</h5>

    <% if @customer.orders.any? %>
      <table class="highlight">
        <thead>
          <tr>
            <th>Date</th>
            <th>Amount</th>
          </tr>
        </thead>
        <tbody>
          <% @customer.orders.order(date: :desc).each do |order| %>
            <tr>
              <td>
                <%= link_to order.date.strftime("%m/%d/%y"), order_path(order), style: "color: #2196F3;" %>
              </td>
              <td>
                <strong>$<%= number_with_precision(order.total_cost, precision: 2) %></strong>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p>This customer has no order history.</p>
    <% end %>
  </div>
</div>
