<div class="card">
  <div class="card-content">
    <h5>Account: <%= @customer.first_name %> <%= @customer.last_name %></h5><br />

    <b>Phone:</b><br>
    <%= number_to_phone(@customer.phone) %><br /><br />

    <b>Username:</b><br>
    <%= @customer.user&.username || "n/a" %><br /><br />

    <b>Email:</b><br>
    <%= @customer.email || "n/a" %><br /><br />

    <b>Active Customer?</b><br>
    <%= @customer.active ? "Yes" : "No" %><br /><br />
  </div>
</div>