<div class="row">
  <div class="col s9">
    <%= simple_form_for(object) do |f| %>
      <%= f.error_notification %>
      
      <!-- Owner Information Card -->
      <div class="card">    
        <div class="card-content">
          <span class="card-title"><%= section_1_title %></span>
          <div class="row">
            <%= render partial: "#{fields}", locals: { f: f } %>
          </div>
        </div>
      </div>

      <!-- Account Information Card -->
      <div class="card grey lighten-3">
        <div class="card-content">
          <span class="card-title"><%= section_2_title %></span>
          <%= f.simple_fields_for(nested_object) do |f2| %>
            <div class="row">
              <%= render partial: "#{nested_fields}", locals: { f2: f2 } %>
            </div>
          <% end %>
        </div>
      </div>
      
      <!-- Actions -->
      <div class="actions">
        <%= f.button :submit, "Register", class: 'btn btn-primary' %>
        <%# link_to "Cancel", owners_path, class: 'btn btn-secondary' %>
      </div>
    <% end %>
  </div>
</div>