<!DOCTYPE html>
<html>
  <head>
    <title>Roi du Pain :: <%= controller.controller_name.capitalize %></title>
    <%= csrf_meta_tags %>
    
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag "https://fonts.googleapis.com/icon?family=Material+Icons" %>
    <%= stylesheet_link_tag "https://fonts.googleapis.com/css?family=Bitter|Josefin+Sans|Nunito|Varela+Round" %>
  </head>

  <body>
    <header>
      <!-- Partials for the topbar and navigation -->
      <%# render :partial => "partials/topbar" %>
      <%# render nav partials depending on who is logged in %>
      <%= render :partial => "partials/topbar" %>
      <% if logged_in? && ( current_user.customer_role? ) %>
        <%= render :partial => "partials/customer_nav" %>
      <% elsif logged_in? && current_user.manager_role? %>
        <%= render :partial => "partials/nav" %>
      <% else %>
        <%= render :partial => "partials/guest_nav" %>
      <% end %>

    </header>
    <main>
    <div class="container">
      <div class="row">
        <div class="col s12" id="main_content">
          <!-- Flash messages appear here -->
          <%= render :partial => "partials/flash" %>

          <!-- MAIN CONTENT OF TEMPLATE GOES HERE -->
          <%= yield %>
        </div>
      </div>
    </div>
    </main>
    
    <%= render :partial => "partials/footer" %> 
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>   
  </body>
</html>